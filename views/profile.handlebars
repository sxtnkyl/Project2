<div class="row">
  <div class="col-auto">
    <h2>Hey, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your Music Profile:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="profile-name">Name:</label>
        <input class="form-input" type="text" id="profile-name" name="profile-name" />
      </div>
      <div class="form-group">
        <label for="profile-instrument">Instrument:</label>
        <input class="form-input" type="text" id="profile-instrument" name="profile-instrument" />
      </div>
      <div class="form-group">
        <label for="profile-genre">Genre:</label>
        <textarea class="form-input" id="profile-genre" name="profile-genre"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Search!</button>
      </div>
    </form>
  </div>

  {{#if matched.length}}
  <div class="col-md-6 project-list">
    <h3>Current Matches:</h3>

    {{#each matched as |matched|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/matched/{{matched.id}}">{{matched.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{matched.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
